<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.android.multistreamplayer.MultiStreamPlayerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:controller_layout_id="@layout/live_stream_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/channel_info_view"
            app:layout_constraintBottom_toTopOf="@id/chatTextField"/>

        <View
            android:id="@+id/channel_info_view"
            android:layout_width="match_parent"
            android:background="@color/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/player"
            android:elevation="1dp"
            android:layout_height="75dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/drd"
            app:layout_constraintBottom_toBottomOf="@id/channel_info_view"
            app:layout_constraintTop_toTopOf="@id/channel_info_view"
            app:layout_constraintStart_toStartOf="@id/channel_info_view"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:elevation="1dp"
            app:civ_border_width="2dp"
            android:layout_marginBottom="10dp"
            app:civ_border_color="@color/colorOnSurface"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:id="@+id/title_text"
            android:text="DROPS MAXIMIZED | @DRDISRESPECT"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/profile_image"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintEnd_toEndOf="@id/channel_info_view"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:id="@+id/channel_name"
            android:text="DrDisrespect"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:elevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            app:layout_constraintStart_toStartOf="@id/title_text"
            app:layout_constraintEnd_toEndOf="@id/title_text"
            app:layout_constraintBottom_toBottomOf="@id/profile_image"
            android:layout_height="wrap_content"
            android:singleLine="true"/>

        <ScrollView
            android:id="@+id/settings_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?colorSurface"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/chatTextField">

            <com.android.multistreamplayer.settings.SettingsLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/ChatTextInput"
            android:id="@+id/chatTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:boxStrokeWidth="1dp"
            app:endIconMode="password_toggle"
            app:boxCornerRadiusBottomEnd="2dp"
            app:boxCornerRadiusBottomStart="2dp"
            app:boxCornerRadiusTopEnd="2dp"
            app:boxCornerRadiusTopStart="2dp"
            app:boxBackgroundMode="outline"
            app:layout_constraintBottom_toBottomOf="parent"
            android:hint="message">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.android.multistreamplayer.MultiStreamPlayerLayout>
</layout>